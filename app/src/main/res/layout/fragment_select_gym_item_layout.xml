<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/close_icon_imageview"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_close" />

    <TextView
        android:id="@+id/gym_item_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Dumb Bells"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/gym_item_quantity_editview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/desired_amount_text"
        android:textStyle="bold|italic"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/gym_item_amount_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/gym_item_select_button_text"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:layout_margin="16dp"/>




</LinearLayout>